<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_okr_main_project_project_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/z_color_background"
            app:tabIndicatorColor="@color/z_color_primary"
            app:tabSelectedTextColor="@color/z_color_primary"></com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/z_color_split_line"
            android:padding="0dp"></LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_okr_main_project_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_okr_main_project_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/spacing_normal"
        android:src="@mipmap/icon_add_people"
        android:visibility="gone"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
